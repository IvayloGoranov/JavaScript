doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title Blog System
        link(rel='stylesheet', type='text/css', href='/public/css/site.css')
    body
        header
            nav.nav
                ul
                    li
                        a(href='/') Home Page
                    li
                        a(href='/articles/list') List Articles
                    li
                        a(href='/articles/add') Add Article
                    if isAdmin
                        li
                            a(href='/categories/add') Add Category
                    li.delimeter
                    if user
                        li.align-right
                            form#logout-form(method="POST" action="/users/logout")
                            a(href="javascript:document.getElementById('logout-form').submit()") Logout
                        li.align-right
                            span= user.username
                    else
                        li.align-right
                            a(href='/users/register') Register
                        li.align-right
                            a(href='/users/login') Login

        if error
            h2.error-message= error
        else if success
            h2.success-msg= success

        main
            block content
        footer
            p &copy;Blog System

